// execute with: fastfetch --colors-block-range-start 9 --colors-block-width 3

{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/ascii/planet",
    "padding": {
      "top": 2,
      "right": 6,
      "left": 2
    },
    "color": {
      "1": "#89b4fa"
    }
  },
  "display": {
    "separator": " ",
    "color": {
      "title": "#89b4fa",
      "keys": "#89b4fa",
      "output": "#cdd6f4"
    }
  },
  "modules": [
    "break",
    "break",
    "break",
    {
      "type": "title",
      "keyWidth": 10
    },
    "break",
    {
      "type": "os",
      "key": " ",
      "keyColor": "#f38ba8" // = color3
    },
    {
      "type": "kernel",
      "key": " ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "shell",
      "key": " ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "terminal",
      "key": " ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "wm",
      "key": " ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "disk",
      "key": "󰆼 ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "gpu",
      "key": "󰢮 ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "cpu",
      "key": "󰘚 ",
      "keyColor": "#89b4fa"
    },
    {
      "type": "media",
      "key": "󰝚 ",
      "keyColor": "#89b4fa"
    },
    "break",
    {
      "type": "colors",
      "symbol": "circle" // Des cercles pour un look plus moderne
    },
    "break",
    "break"
  ]
}
